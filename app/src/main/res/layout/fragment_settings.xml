<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="16dp"
    android:fillViewport="true"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Einstellungen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Einstellungen"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <!-- Hinweis -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Du kannst hier deine Kontaktdaten aktualisieren. Wenn du umgezogen bist, lösche bitte dein Profil und lege in deinem neuen Flurfunk-Netzwerk ein neues Profil an. Deine Angebote werden in deiner alten Hausgemeinschaft dann automatisch ausgeblendet."
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Etage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etage / Stockwerk"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <!-- E-Mail -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Mail"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <!-- Telefonnummer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefonnummer"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />

        <!-- Buttons -->
        <Button
            android:id="@+id/buttonSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil speichern"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/buttonDeleteProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil löschen"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
